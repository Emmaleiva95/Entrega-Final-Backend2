<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- BOOTSTRAP -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <title>Home</title>
</head>

<body>

    <header>
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container">
                <a class="navbar-brand" href="#">Navbar</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse justify-content-end navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/api/products">Productos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/api/carts/<%= idCarrito %>">Carrito</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>


    <section class="py-4">

        <div class="container">
            <h2 class="mb-4">Carrito</h2>


            <table class="table table-striped">

                <thead>
                  <tr>
                    <th scope="col">Producto</th>
                    <th scope="col">TÃ­tulo</th>
                    <th scope="col">Precio</th>
                    <th scope="col">Cantidad</th>
                    <th scope="col">Subtotal</th>
                    <th scope="col">Quitar</th>
                  </tr>
                </thead>

                <tbody>
                 
                    <% for (let i=0; i < products.length; i++) { %>
                       <tr>
                        <td><img style="max-width: 120px;" src="/assets/img/<%= products[i].product.thumbnails[0] %>" alt="<%= products[i].product.title %>"></td>
                        <td><%= products[i].product.title %></td>
                        <td>$<%= products[i].product.price %></td>
                        <td><span><%= products[i].quantity %></span></td>
                        <td>$<%= products[i].product.price * products[i].quantity %></td>
                        
                        <td>
                            <form action="/api/carts/1/product/<%=products[i].product._id %>" method="DELETE">
                                <button type="submit" class="btn btn-danger">Quitar</button>
                            </form>
                      
                        </td>
                       </tr>
                    <% } %>

                </tbody>
              </table>
           
        </div>
    </section>

    <!-- BOOTSTRAP JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>

</body>

</html>